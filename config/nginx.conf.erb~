
# extrapolated by local: /etc/nginx/sites-enabled/mivoq.it

daemon off;
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>; # Heroku dynos have at least 4 cores.

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
        gzip on;
        gzip_comp_level 2;
        gzip_min_length 512;

	client_body_timeout 5; # must read the body in 5 seconds
	sendfile on;

	server {
		listen <%= ENV["PORT"] %>;

		keepalive_timeout 5;

		# serve static files

		location ~* \.(css|js|jpg|png|gif|mp3|swf)$ {
       			root ./public/;
		}

		location / {
			proxy_pass http://www.nyt.com;
		}
	}
}
