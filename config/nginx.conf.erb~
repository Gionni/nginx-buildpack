
daemon off;
#Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
        gzip on;
        gzip_comp_level 2;
        gzip_min_length 512;

	server {
		listen <%= ENV["PORT"] %>;
		keepalive_timeout 5;

		# serve static files
		location ~ ^/(images|javascript|js|css|flash|media|static)/  {
	       		root app/public/;
			expires 30d;
		}

		location / {
			proxy_pass http://www.nyt.com;
		}
	}
}
